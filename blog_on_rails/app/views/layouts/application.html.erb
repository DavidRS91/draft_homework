<!DOCTYPE html>
<html>
  <head>
    <title>BlogOnRails</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav class="navbar navbar-inverse navbar-expand navbar-primary bg-light">
    <a class="navbar-brand" href="<%= posts_path %>">Blog on Rails</a>
    <div class="collapse navbar-collapse flex-row-reverse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="<%= posts_path %>">Home<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="<%= new_post_path %>">New Post</a>
        </li>
      </ul>
    </div>
  </nav>
  <div class="container-fluid">
        <%= yield %>
      </div>
  </body>
</html>
